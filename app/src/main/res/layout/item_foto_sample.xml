<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_foto_sample_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11 - 02 - 2018"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/item_foto_sample_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_foto_sample_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.3"
            android:text="Berikut kami sampaikan hasil sample GO Minggu, 11 Feb 2018 pukul 05.00 WIB =
P = 709/27/719.9
Pt = 731/27/741.7
Px = 749/28/760.4
BS = 841/28/850.0 FP = 65"/>
    </LinearLayout>
</android.support.v7.widget.CardView>