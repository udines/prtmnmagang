<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pertamina.pertaminatuban.distribusi.InputRitaseActivity"
    tools:showIn="@layout/activity_input_ritase">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Pilih Tanggal"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:id="@+id/input_ritase_tanggal"/>

        <EditText
            android:id="@+id/input_ritase_jumlah_mobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLines="1"
            android:hint="Jumlah Mobil"/>
        <EditText
            android:id="@+id/input_ritase_daya_angkut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLines="1"
            android:hint="Daya Angkut"/>
        <EditText
            android:id="@+id/input_ritase_tp_harian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="number"
            android:maxLines="1"
            android:hint="Tp Harian"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_ritase_kirim"
            android:layout_margin="4dp"
            android:text="Kirim"/>
        <ProgressBar
            android:id="@+id/input_ritase_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
