<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="4dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Penyaluran Harian"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:clickable="true"
        android:id="@+id/dialog_distribusi_matbal"
        android:padding="8dp"
        android:focusable="true"
        android:background="@color/grey_200"
        android:layout_margin="4dp"
        android:foreground="?selectableItemBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Konsumen"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:clickable="true"
        android:background="@color/grey_200"
        android:layout_margin="4dp"
        android:id="@+id/dialog_distribusi_konsumen"
        android:padding="8dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Wilayah"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@color/grey_200"
        android:layout_margin="4dp"
        android:clickable="true"
        android:id="@+id/dialog_distribusi_wilayah"
        android:padding="8dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jam Operasional"
        android:textSize="18sp"
        android:background="@color/grey_200"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:clickable="true"
        android:id="@+id/dialog_distribusi_opers"
        android:padding="8dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ritase MT"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@color/grey_200"
        android:layout_margin="4dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:id="@+id/dialog_distribusi_ritase"
        android:padding="8dp"
        android:focusable="true"
        android:foreground="?selectableItemBackground"/>
</LinearLayout>