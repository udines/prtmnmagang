                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.7"
                        android:text="0 KL/Jam"
                        android:textSize="16sp" />
                </LinearLayout>

