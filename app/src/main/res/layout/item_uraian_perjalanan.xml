<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"/>
        <TextView
            android:id="@+id/item_uraian_perjalanan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tanggal"/>
        <TextView
            android:id="@+id/item_uraian_perjalanan_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02 - 02 - 2018"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Uraian"/>
        <TextView
            android:id="@+id/item_uraian_perjalanan_uraian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transportasi Antar Kota"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jumlah"/>
        <TextView
            android:id="@+id/item_uraian_perjalanan_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp0"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Keterangan"/>
        <TextView
            android:id="@+id/item_uraian_perjalanan_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TBN GRS SBY, PP"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Kode Anggaran"
                android:layout_marginRight="2dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Cost Center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Kode Bagian"
                android:layout_marginLeft="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_uraian_perjalanan_kode_anggaran"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="6001008100"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/item_uraian_perjalanan_cost_center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="A1502246"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/item_uraian_perjalanan_kode_bagian"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="F16430"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>