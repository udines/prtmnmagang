<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pertamina.pertaminatuban.distribusi.OpersActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/opers_tanggal_button"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPERASIONAL"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/opers_spinner_periode"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="12 Maret 2017"
                android:textSize="16sp"
                android:id="@+id/opers_tanggal"
                android:textColor="@color/white"
                android:paddingTop="8dp"
                android:drawableEnd="@drawable/ic_date_range_white_18dp"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp"
                android:drawableRight="@drawable/ic_date_range_white_18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Maret 2017"
                android:visibility="gone"
                android:textSize="16sp"
                android:id="@+id/opers_bulan"
                android:textColor="@color/white"
                android:paddingTop="8dp"
                android:drawableEnd="@drawable/ic_date_range_white_18dp"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp"
                android:drawableRight="@drawable/ic_date_range_white_18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2017"
                android:visibility="gone"
                android:textSize="16sp"
                android:id="@+id/opers_tahun"
                android:textColor="@color/white"
                android:paddingTop="8dp"
                android:drawableEnd="@drawable/ic_date_range_white_18dp"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp"
                android:drawableRight="@drawable/ic_date_range_white_18dp" />
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_opers" />

</android.support.design.widget.CoordinatorLayout>
